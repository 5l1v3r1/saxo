#!/usr/bin/env python3

# http://inamidst.com/saxo/
# Created by Sean B. Palmer

import os
import sys

commands = os.path.dirname(__file__)
sys.path.append(os.path.join(commands, ".saxo-path"))

import saxo

url = "http://websitedev.de/temp-bin/geo.php"

@saxo.pipe
def geo(arg):
    nick = os.environ.get("SAXO_NICK", "result")
    page = saxo.request(url, query={"nick": nick, "q": arg})
    return page["text"]
