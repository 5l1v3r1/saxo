#!/usr/bin/env python3

# http://inamidst.com/saxo/
# Created by Sean B. Palmer

import json
import saxo

@saxo.pipe
def btc(arg):
    if arg:
        return "This command takes no argument"
    url = "https://apiv2.bitcoinaverage.com/indices/global/ticker/BTCUSD"
    page = saxo.request(url)
    data = json.loads(page["text"])
    return str(data["last"]) + " USD (BitcoinAverage)"
